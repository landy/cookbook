{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "outputs": {
    "WebAppName": {
      "type": "string",
      "value": "cookbook-web-dev"
    },
    "WebAppPassword": {
      "type": "string",
      "value": "[list(resourceId('Microsoft.Web/sites/config', 'cookbook-web-dev', 'publishingcredentials'), '2014-06-01').properties.publishingPassword]"
    }
  },
  "parameters": {},
  "resources": [
    {
      "apiVersion": "2014-04-01",
      "kind": "web",
      "location": "westeurope",
      "name": "cookbook-ai-dev",
      "properties": {
        "Application_Type": "web",
        "name": "cookbook-ai-dev"
      },
      "tags": {
        "displayName": "AppInsightsComponent"
      },
      "type": "Microsoft.Insights/components"
    },
    {
      "apiVersion": "2016-08-01",
      "dependsOn": [
        "cookbook-web-dev-farm",
        "cookbook-ai-dev"
      ],
      "kind": "app",
      "location": "westeurope",
      "name": "cookbook-web-dev",
      "properties": {
        "httpsOnly": false,
        "serverFarmId": "cookbook-web-dev-farm",
        "siteConfig": {
          "alwaysOn": false,
          "appSettings": [
            {
              "name": "public_path",
              "value": "./public"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference('Microsoft.Insights/components/cookbook-ai-dev').InstrumentationKey]"
            },
            {
              "name": "APPINSIGHTS_PROFILERFEATURE_VERSION",
              "value": "1.0.0"
            },
            {
              "name": "APPINSIGHTS_SNAPSHOTFEATURE_VERSION",
              "value": "1.0.0"
            },
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "DiagnosticServices_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "InstrumentationEngine_EXTENSION_VERSION",
              "value": "~1"
            },
            {
              "name": "SnapshotDebugger_EXTENSION_VERSION",
              "value": "~1"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_BaseExtensions",
              "value": "~1"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_Mode",
              "value": "recommended"
            }
          ],
          "metadata": [
            {
              "name": "CURRENT_STACK",
              "value": "dotnetcore"
            }
          ]
        }
      },
      "type": "Microsoft.Web/sites"
    },
    {
      "apiVersion": "2018-02-01",
      "location": "westeurope",
      "name": "cookbook-web-dev-farm",
      "properties": {
        "name": "cookbook-web-dev-farm",
        "perSiteScaling": false,
        "reserved": false
      },
      "sku": {
        "capacity": 1,
        "name": "F1",
        "size": "0",
        "tier": "Free"
      },
      "type": "Microsoft.Web/serverfarms"
    }
  ]
}